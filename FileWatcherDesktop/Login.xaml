<Window x:Class="FileWatcherDesktop.Login"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FileWatcherDesktop"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">
    <StackPanel>
        <Label Background="LightGoldenrodYellow" Padding="10">Username</Label>
        <TextBox x:Name="tb_username" Padding="10"/>
        <Label Background="LightGoldenrodYellow" Padding="10">Password</Label>
        <PasswordBox x:Name="tb_password" Padding="10"/>
        <Label Background="LightGoldenrodYellow" Padding="10">Path</Label>
        <TextBox x:Name="tb_path" Padding="10"/>
        <Button Content="Login" Padding="10" Margin="10" Width="300" Click="Login_Button_Click" />
        <Button Content="Sign up" Height="40" Padding="10" Width="300" Background="LightBlue" Margin="10" Click="Register_Button_Click" />

    </StackPanel>
</Window>
